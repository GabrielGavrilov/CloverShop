<!DOCTYPE html>
<html>
<title>CloverShop Checkout</title>
<body>
    <p>Order #<%= orderNumber %></p>
    <p><%= orderStatus %></p>
    <% if(orderProducts.length > 0) { %>
        <% orderProducts.forEach((item)=> { %>
            <p><%= item.product.productName %></p>
            <p><%= item.product.productPrice %></p>
            <p><%= item.quantity %></p>
            <p><%= item.quantity * item.product.productPrice %></p>
        <% }) %>
        <p>Order subtotal: <%= orderTotal %></p>
    <% } %>

    <form action="/order/checkout/<%= orderId %>" method="POST">
        <script
        src="https://checkout.stripe.com/checkout.js" class="stripe-button"
        data-key="pk_test_51Kuz2UKhcNVCyFMaGkUTPR6aVYZgpNPAx4ukLnZb24yK6EHcW2tHQGkldBjh2zNUpgA2DLc6vjFDfsApyiQ0xJQs00nm2FpW2v"
        data-amount="<%= orderTotal %>"
        data-name="Order #<%= orderNumber %>"
        data-description="Payment for order #<%= orderNumber %>"
        data-image=""
        data-locale="auto">
      </script>
      <script>
          var button = document.getElementsByClassName('stripe-button-el')
          button[0].style.display = 'none'
      </script>
      <% if(orderStatus == "unpaid") { %>
        <button type="submit">Pay</button>
      <% } else { %>
        <button disabled type="submit">Pay</button>
      <% } %>
    </form>
</body>
</html>